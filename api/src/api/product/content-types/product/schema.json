{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "product_name": {
      "type": "string",
      "required": true
    },
    "product_description": {
      "type": "text",
      "required": true
    },
    "product_img1": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "product_img2": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "product_img3": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "product_price": {
      "type": "decimal",
      "required": true
    },
    "product_isNew": {
      "type": "boolean",
      "default": false
    },
    "product_isBestseller": {
      "type": "boolean",
      "default": false
    },
    "product_isOnSale": {
      "type": "boolean",
      "default": false
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "sub_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::sub-category.sub-category",
      "inversedBy": "products"
    },
    "user_wishlists": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::user-wishlist.user-wishlist",
      "mappedBy": "products"
    },
    "user_carts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::user-cart.user-cart",
      "mappedBy": "products"
    }
  }
}
